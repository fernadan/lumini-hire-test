
@{
    Layout = null;
}
@model LuminiHire.Models.Search

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Lumini Hire - Busca Score Card</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />

    <script src="~/lib/font-awesome/js/all.js"></script>

</head>
<body>
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-12">
                <div class="col-12">
                    <div class="col-8 offset-md-2 text-center">
                        <h1 class="roxo-principal-letra">Lumini Hire Test</h1>
                    </div>
                    <div class="col-8 offset-md-2 text-center">
                        <h5>Busca de Universidades Americanas</h5>
                    </div>
                    <form class="col-8 offset-md-2 text-center" method="get" asp-controller="Home" asp-action="Get">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" asp-for="query" placeholder="O que você está procurando?">
                            <div class="input-group-append">
                                <button class="btn btn-secondary roxo-principal-fundo" type="submit" title="Buscar">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-12">
                    <div class="col-2 offset-md-8 text-right">
                        <a href="#" class="roxo-principal-link">DASHBOARD</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
